
<div class="row">
	<div class="large-12 columns">
		<%= form_tag sessions_path do %>
		  <div class="field">
		          <%= label_tag :email %><br />
		          <%= text_field_tag :email, params[:email] %>
		  </div>
		  <div class="field">
		          <%= label_tag :password %><br />
		          <%= password_field_tag :password %>
		  </div>
		  <%= submit_tag "Login", class: "small radius button" %>
		<% end %>
	</div>
</div>